<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_item_goods">
    <TextView
        android:id="@+id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品名称商品名称商品名称"
        android:textSize="8sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_price_1"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥ 0.00"
        android:textSize="8sp"
        android:textColor="@color/darkorange"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_count"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1份"
        android:textSize="8sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <ImageButton
        android:id="@+id/ib_delete"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/ic_action_delete"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_width="26dp"
        android:layout_height="26dp" />
    <TextView
        android:id="@+id/tv_price_2"
        android:layout_toLeftOf="@id/ib_delete"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥ 0.00"
        android:textSize="8sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
</RelativeLayout>