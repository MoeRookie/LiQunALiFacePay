<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#11ffffff">
    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_bg_dialog_global">
        <Button
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@null"
            android:text="╳"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="167dp"
                android:layout_height="93dp"
                android:src="@drawable/bg_dialog_input"
                android:scaleType="centerCrop"/>
            <EditText
                android:id="@+id/et_bar_code"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@null"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <com.liqun.www.liqunalifacepay.ui.view.NumberKeyboardView
                android:id="@+id/nkv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:keyBackground="@drawable/selector_key_background"
                android:keyTextSize="14sp"
                android:keyTextColor="@color/dimgray"
                android:shadowColor="@android:color/transparent"
                android:shadowRadius="0"
                app:xnkv_deleteDrawable="@mipmap/keyboard_backspace"
                app:xnkv_deleteWidth="22dp"/>
            <Button
                android:id="@+id/btn_yes"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/bg_title_bar"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="@string/sure"
                android:textSize="16sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_message"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:text="条码号不能为空！"
                android:textSize="10sp"
                android:textColor="@color/red"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>