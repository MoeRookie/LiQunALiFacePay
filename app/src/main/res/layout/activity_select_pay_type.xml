<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_marginLeft="17dp"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_close"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:background="@null"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="â•³"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginLeft="83dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_pay_type"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </RelativeLayout>
    <ImageButton
        android:id="@+id/ib_scan_code"
        android:layout_gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:background="@android:color/transparent"
        android:src="@drawable/bg_pay_type_ib_scan_code"
        android:scaleType="centerCrop"/>
    <ImageButton
        android:id="@+id/ib_smile"
        android:layout_marginTop="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="191.25dp"
        android:layout_height="231.5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/bg_pay_type_ib_smile"
        android:scaleType="centerCrop"/>
</LinearLayout>