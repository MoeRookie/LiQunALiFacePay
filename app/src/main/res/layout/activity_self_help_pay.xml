<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_title_self_help_pay"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/ll_self_pay_first"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_input"
                android:layout_gravity="right"
                android:layout_marginRight="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:background="@null"
                android:text="@string/input_bar_code"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_home_bottom"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_self_pay_second"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_result_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加成功 , 请继续扫描下一件商品！"
                android:textColor="@color/gray"
                android:padding="2dp"
                android:textSize="6sp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_goods"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/btn_add_bag"
                    android:layout_marginLeft="24dp"
                    android:layout_width="95dp"
                    android:height="29dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_self_pay_btn_add_bag"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:textSize="10sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
                <Button
                    android:id="@+id/btn_input_bar_code"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="扫码有问题?手输条码>"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="@null"/>
            </LinearLayout>
            <TextView
                android:id="@+id/goods_num"
                android:layout_marginTop="26dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共1件商品"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/goods_total_price"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.6"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btn_pay"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="35dp"
                android:layout_width="242dp"
                android:layout_height="50dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:background="@color/bg_title_bar"
                android:text="@string/pay"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>