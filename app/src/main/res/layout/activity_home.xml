<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <!-- iv的scaleType属性详解 -->
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_home_head"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_liqun"
            android:layout_width="45dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_logo_liqun"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="13dp"
            android:text="╳"
            android:textSize="10sp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="59dp"
            android:src="@drawable/ic_logo_ali"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="13dp"
            android:text="╳"
            android:textSize="10sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/iv_rt"
            android:layout_width="45dp"
            android:layout_height="41dp"
            android:src="@drawable/ic_logo_ruitong"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_vip"
            android:layout_width="116dp"
            android:layout_height="31dp"
            android:background="@drawable/bg_home_btn_vip"/>
        <Button
            android:id="@+id/btn_novip"
            android:layout_marginLeft="28dp"
            android:layout_width="116dp"
            android:layout_height="31dp"
            android:background="@drawable/bg_home_btn_novip"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_home_bottom"
        android:scaleType="centerCrop"/>
</LinearLayout>